//n queens
#include <stdio.h>
#include <stdbool.h>
#include <stdlib.h>

#define MAX 10 

int board[MAX];
int N;            

bool isSafe(int row, int col) {
    for (int i = 0; i < row; i++) {
        if (board[i] == col || abs(board[i] - col) == abs(i - row)) {
            return false;
        }
    }
    return true;
}

void printSolution() {
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            if (board[i] == j) {
                printf(" Q ");
            } else {
                printf(" . ");
            }
        }
        printf("\n");
    }
    printf("\n");
}

void solveNQueensDFS(int row) {
    if (row == N) { 
        printSolution();
        return;
    }

    for (int col = 0; col < N; col++) {
        if (isSafe(row, col)) {
            board[row] = col;
            solveNQueensDFS(row + 1); 
        }
    }
}

int main() {
    printf("Enter the value of N: ");
    scanf("%d", &N);
    solveNQueensDFS(0); 

    return 0;
}
